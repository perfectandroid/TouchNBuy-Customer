<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="1dp"
    android:orientation="vertical"
    tools:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            ads:srcCompat="@drawable/rateus" />

        <TextView
            android:id="@+id/tv_ratesub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#3C3A3A"
            android:gravity="center"
            android:text="How was your experience with this store? Please rate us by tapping stars below."
            />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="Enter New Password"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:visibility="gone"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtlater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Cancel"
                android:padding="10dp"
                android:background="@drawable/bt_curved1"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/txtvSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="@drawable/bt_curved2"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Submit" />

        </LinearLayout>

        <!--   <EditText
               android:id="@+id/etRetypeNewPass"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="1dp"
               android:background="@drawable/etbgsqaure"
               android:gravity="center"
               android:hint="Re-enter New Password"
               android:inputType="textEmailAddress"
               android:maxLength="30"
               android:maxLines="1"
               android:padding="10dp"
               android:textColor="@color/black"
               android:textSize="15sp" />-->
    </LinearLayout>
</LinearLayout>



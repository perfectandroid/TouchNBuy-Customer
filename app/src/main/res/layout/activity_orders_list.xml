<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:id="@+id/llOrderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="left|center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:text=" "
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:text=" "
                    android:gravity="right"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greylight" />
            <LinearLayout
                android:id="@+id/lnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                 <!--   <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_order_product"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/imStatus"/>
                        <LinearLayout
                            android:id="@+id/llStoreName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="left|center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvstoreName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="10dp"
                                android:text=" "
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/ic_store_front"
                                android:drawablePadding="5dp"
                                android:textColor="@color/black"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="left|center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDeliveryType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="10dp"
                                android:text=" "
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:textColor="@color/black"
                                android:layout_weight="1.5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:orientation="horizontal">


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:background="@drawable/arrowblue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:visibility="gone"
                            app:tint="@color/greydark" />

                            <ImageView
                                android:id="@+id/imdelete"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_delete"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="visible"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_pend"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:background="@drawable/img_pend" />


                                <View
                                    android:id="@+id/view_conf"
                                    android:layout_width="60dp"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_toRightOf="@+id/img_pend"
                                    android:background="@color/grey" />

                                <ImageView
                                    android:id="@+id/img_conf"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_toRightOf="@+id/view_conf"
                                    android:background="@drawable/img_confirm_not"/>

                                <View
                                    android:id="@+id/view_packed"
                                    android:layout_width="60dp"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_toRightOf="@+id/img_conf"
                                    android:background="@color/grey" />

                                <ImageView
                                    android:id="@+id/img_pack"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_toRightOf="@+id/view_packed"
                                    android:background="@drawable/img_pack_not"/>

                                <View
                                    android:id="@+id/view_deli"
                                    android:layout_width="60dp"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_toRightOf="@+id/img_pack"
                                    android:background="@color/grey" />

                                <ImageView
                                    android:id="@+id/img_deli"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_toRightOf="@+id/view_deli"
                                    android:background="@drawable/img_del_not"/>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <TextView
                                    android:id="@+id/tv_pend"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:background="@color/white" />

                                <TextView
                                    android:id="@+id/tv_conf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Confirmed"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:layout_toRightOf="@+id/tv_pend"
                                    android:background="@color/white" />

                                <TextView
                                    android:id="@+id/tv_pack"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Packed"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:layout_toRightOf="@+id/tv_conf"
                                    android:background="@color/white" />

                                <TextView
                                    android:id="@+id/tv_deli"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Delivered"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:layout_toRightOf="@+id/tv_conf"
                                    android:background="@color/white" />




                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="false"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:text=" "
                                android:visibility="gone"
                                android:drawablePadding="5dp"
                                android:textSize="13dp"
                                android:layout_weight="1.5"/>


                        </LinearLayout>




                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDeliveryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:text=" "
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_weight="1.5"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llrateus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:weightSum="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greylight" />
<!--
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_order_star" />-->

                <Button
                    android:id="@+id/btnrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/color_activity_transparent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Rate Us"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>